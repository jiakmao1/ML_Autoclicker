            values:["Left","Right"]
            on_text:root.giveNumber(self.text,self.name,root.ids.MainLabel.text)
            canvas:
                Color:
                    rgba:0.5,0.5,0.5,0.8
                Line:
                    width:2.25 if self.hovered else 1.5
                    rectangle:self.x,self.y,self.width,self.height
    BoxLayout:
